<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.xezzon.school.passport.repository.PermissionMapper">
    <resultMap id="BaseResultMap" type="indi.xezzon.school.passport.model.Permission">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="resource" jdbcType="VARCHAR" property="resource"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, resource, description
    </sql>
    <insert id="insertRolePermissionRel">
        INSERT INTO role_permission VALUES
        <foreach collection="permissionsId" item="permissionId" open="(" close=")">
            (#{roleId}, #{permissionId})
        </foreach>
    </insert>
    <update id="updateRolePermissionRel">

    </update>
    <delete id="deleteRolePermissionRel">
        DELETE
        FROM role_permission
        WHERE role_id = #{roleId}
          AND permission_id = #{permissionId}
    </delete>
    <select id="selectByRoles" resultType="indi.xezzon.school.passport.model.Permission">
        SELECT
        <include refid="Base_Column_List"/>
        FROM permission RIGHT JOIN
        (SELECT permission_id
        FROM role_permission
        WHERE role_id IN
        <foreach collection="set" item="role" open="(" close=")">
            #{role.id}
        </foreach>) rp
        ON rp.permission_id = permission.id
    </select>
    <select id="list" resultType="indi.xezzon.school.passport.model.Permission">
        SELECT
        <include refid="Base_Column_List"/>
        FROM permission
    </select>
</mapper>
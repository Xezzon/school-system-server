<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<!--
# DEBUG级别日志
面向人员：开发者
输出：控制台
输出内容：操作痕迹。如调用WebAPI的记录、关键方法的执行。
# INFO级别日志
面向人员：数据中心
输出：数据仓库
输出内容：与用户行为有关的信息。框架日志不输出到数据仓库。
注意：数据必须进行脱敏！
# WARN级别日志（4xx）
面向人员：系统运维
输出：数据库、文件
输出内容：用户危险操作，系统告警。框架日志不输出到文件。数据库定期清理超过12个月的操作日志。
# ERROR级别日志（5xx）
面向人员：开发、运维
输出：数据库
输出内容：系统逻辑错误信息。数据库定期清理超过15天的操作日志。
-->
<configuration>
    <!--引用默认日志配置-->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!--使用默认的控制台日志输出实现-->
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
    <!-- 从springboot配制文件中获取应用名称 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" />
    <!-- 日志输出格式 -->
    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg %n" />
    <!-- 日志路径格式：$CLASSPATH/logs/${appName}-${level}.log.${yyyy-MM-dd} -->
    <porperty name="FILE_PATH" value="logs/${APP_NAME}-%level.log.%d{yyyy-MM-dd}" />

    <!-- DEBUG及以上输出到控制台 -->
    <appender name="DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <!-- INFO输出到数据仓库 -->

    <!-- WARN输出到数据库 -->

    <!-- WARN输出到文件 -->
    <appender name="WARN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
        </filter>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}</fileNamePattern>
            <maxFileSize>${LOG_FILE_MAX_SIZE:-10MB}</maxFileSize>
            <maxHistory>${LOG_FILE_MAX_HISTORY:-365}</maxHistory>
        </rollingPolicy>
    </appender>
    <!-- ERROR输出到数据库 -->
    <appender>
    </appender>

    <!-- 本工程启用的日志 -->
    <root>
        <appender-ref ref="DEBUG" />
        <appender-ref ref="WARN_FILE" />
    </root>
    <!-- 对指定包或类使用配置 -->
    <logger name="org.slf4j" level="INFO" />
    <logger name="org.springframework" level="INFO" />
</configuration>

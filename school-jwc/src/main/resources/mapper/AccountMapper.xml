<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="indi.xezzon.school.jwc.repository.AccountMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO account(username, cipher)
        VALUES (#{username}, #{cipher});
    </insert>
    <select id="selectByUsername" resultType="indi.xezzon.school.common.model.Account">
        SELECT id, username, cipher, created_time, updated_time
        FROM account
        WHERE username = #{username}
    </select>
</mapper>